<?xml version="1.0" ?>
<robot name="a1_single_leg_bot">
  <material name="black">
    <color rgba="0.0 0.0 0.0 1.0"/>
  </material>

  <material name="light_gray">
     <color rgba="0.75 0.75 0.75 1.0"/>
  </material>

  <material name="black1">
      <color rgba="0.25 0.25 0.25 0.90"/>
  </material>

  <material name="black2">
      <color rgba="0.35 0.35 0.35 0.90"/>
  </material>
  <link name="world"/>
  <joint name="fixed" type="fixed">
    <parent link="world"/>
    <child link="base"/>
  </joint>

  <link name="base">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0.5"/>
      <geometry>
        <box size="0.025 0.025 1.0"/>
      </geometry>
      <material name="light_gray"/>
    </visual>

    <collision>
        <origin rpy="0 0 0" xyz="0 0 0.5"/>
      <geometry>
        <box size="0.025 0.025 1.0"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="10"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
  </link>

  <joint name="linear_guide" type="fixed">
    <origin rpy="0 0 0" xyz="0 -0.025 0.5"/>
    <parent link="base"/>
    <child link="hip_1"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="hip_1">
    <visual>
      <origin rpy="-1.570796 0 0" xyz="0.0 0 0.0"/>
      <geometry>
        <cylinder length="0.034" radius="0.049"/>
      </geometry>
      <material name="black1"/>
    </visual>

    <collision>
      <origin rpy="-1.570796 0 0" xyz="0.0 0 0.0"/>
      <geometry>
        <cylinder length="0.034" radius="0.049"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="0.7835"/>
      <inertia ixx="0.000545773" ixy="0.0" ixz="0.0" iyy="0.000940592" iyz="0.0" izz="0.000545773"/>
    </inertial>
  </link>

  <joint name="hip_pitch" type="revolute">
    <origin rpy="0 1.570796 3.141592" xyz="0 -0.090 0.0"/>
    <parent link="hip_1"/>
    <child link="upper_leg"/>
    <axis xyz="0 1 0"/>
  </joint>

  <link name="upper_leg">
    <visual>
      <origin rpy="0 1.570796 0" xyz="0 0 -0.1"/>
      <geometry>
        <box size="0.2 0.0245 0.034"/>
      </geometry>
      <material name="black2"/>
    </visual>
    <collision>
      <origin rpy="0 1.570796 0" xyz="0 0 -0.1"/>
      <geometry>
        <box size="0.2 0.0245 0.034"/>
      </geometry>
    </collision>
    <inertial>
      <origin rpy="0 0 0" xyz="-0.003237 0.022327 -0.027326"/>
      <mass value="1.013"/>
      <inertia ixx="0.005529065" ixy="-4.825e-06" ixz="0.000343869" iyy="0.005139339" iyz="-2.2448e-05" izz="0.001367788"/>
    </inertial>
  </link>

  <joint name="knee_pitch" type="revolute">
    <origin rpy="0 0 0" xyz="0 0 -0.2"/>
    <parent link="upper_leg"/>
    <child link="lower_leg"/>
    <axis xyz="0 1 0"/>
  </joint>

  <link name="lower_leg">
    <visual>
      <origin rpy="0 1.57079632679 0" xyz="0 0 -0.1"/>
      <geometry>
        <box size="0.2 0.016 0.016"/>
      </geometry>
      <material name="black2"/>
    </visual>

    <collision>
      <origin rpy="0 1.57079632679 0" xyz="0 0 -0.1"/>
      <geometry>
        <box size="0.2 0.016 0.016"/>
      </geometry>
    </collision>

    <inertial>
      <origin rpy="0 0 0" xyz="0.006435 0.0 -0.107388"/>
      <mass value="0.166"/>
      <inertia ixx="0.002997972" ixy="0.0" ixz="-0.000141163" iyy="0.003014022" iyz="0.0" izz="3.2426e-05"/>
    </inertial>
  </link>

  <joint name="FR_foot_fixed" type="fixed">
    <origin rpy="0 0 0" xyz="0 0 -0.2"/>
    <parent link="lower_leg"/>
    <child link="FR_foot"/>
  </joint>
  <link name="FR_foot">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <sphere radius="0.02"/>
      </geometry>
      <material name="black2"/>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <sphere radius="0.02"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.06"/>
      <inertia ixx="9.6e-06" ixy="0.0" ixz="0.0" iyy="9.6e-06" iyz="0.0" izz="9.6e-06"/>
    </inertial>
  </link>
</robot>